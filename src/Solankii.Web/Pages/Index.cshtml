@page
@model IndexModel
@{
    ViewData["Title"] = "Solankii - AI Design Assistant";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .card-hover {
            transition: all 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
        .feature-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 24px;
        }
    </style>
</head>
<body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <h1 class="text-2xl font-bold text-gray-900">
                            <i class="fas fa-magic text-purple-600"></i>
                            Solankii
                        </h1>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <button class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition-colors">
                        <i class="fas fa-plus mr-2"></i>New Project
                    </button>
                    <button class="text-gray-600 hover:text-gray-900">
                        <i class="fas fa-user-circle text-xl"></i>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="gradient-bg text-white py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h1 class="text-5xl font-bold mb-6">
                AI-Powered Design Assistant
            </h1>
            <p class="text-xl mb-8 max-w-3xl mx-auto">
                Transform your UI/UX workflow with intelligent design suggestions, automated component generation, and collaborative design reviews.
            </p>
            <div class="flex justify-center space-x-4">
                <button class="bg-white text-purple-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
                    <i class="fas fa-rocket mr-2"></i>Get Started
                </button>
                <button class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-purple-600 transition-colors">
                    <i class="fas fa-play mr-2"></i>Watch Demo
                </button>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold text-gray-900 mb-4">Powerful Features</h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                    Everything you need to create exceptional user experiences with AI assistance
                </p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- AI Component Generation -->
                <div class="bg-white p-8 rounded-xl shadow-lg card-hover">
                    <div class="feature-icon mb-6">
                        <i class="fas fa-robot"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">AI Component Generation</h3>
                    <p class="text-gray-600 mb-6">
                        Generate modern, accessible UI components from natural language descriptions with AI-powered code generation.
                    </p>
                    <ul class="text-gray-600 space-y-2">
                        <li><i class="fas fa-check text-green-500 mr-2"></i>React, Vue, Angular support</li>
                        <li><i class="fas fa-check text-green-500 mr-2"></i>Accessibility-first design</li>
                        <li><i class="fas fa-check text-green-500 mr-2"></i>Responsive layouts</li>
                    </ul>
                </div>

                <!-- Design Suggestions -->
                <div class="bg-white p-8 rounded-xl shadow-lg card-hover">
                    <div class="feature-icon mb-6">
                        <i class="fas fa-lightbulb"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">Smart Design Suggestions</h3>
                    <p class="text-gray-600 mb-6">
                        Get intelligent recommendations for improving usability, accessibility, and visual design of your components.
                    </p>
                    <ul class="text-gray-600 space-y-2">
                        <li><i class="fas fa-check text-green-500 mr-2"></i>Usability analysis</li>
                        <li><i class="fas fa-check text-green-500 mr-2"></i>Accessibility improvements</li>
                        <li><i class="fas fa-check text-green-500 mr-2"></i>Performance optimization</li>
                    </ul>
                </div>

                <!-- Collaborative Reviews -->
                <div class="bg-white p-8 rounded-xl shadow-lg card-hover">
                    <div class="feature-icon mb-6">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">Collaborative Reviews</h3>
                    <p class="text-gray-600 mb-6">
                        Streamline your design review process with AI-powered feedback and team collaboration tools.
                    </p>
                    <ul class="text-gray-600 space-y-2">
                        <li><i class="fas fa-check text-green-500 mr-2"></i>Real-time collaboration</li>
                        <li><i class="fas fa-check text-green-500 mr-2"></i>Automated scoring</li>
                        <li><i class="fas fa-check text-green-500 mr-2"></i>Version control</li>
                    </ul>
                </div>

                <!-- Design System Management -->
                <div class="bg-white p-8 rounded-xl shadow-lg card-hover">
                    <div class="feature-icon mb-6">
                        <i class="fas fa-palette"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">Design System Management</h3>
                    <p class="text-gray-600 mb-6">
                        Create and maintain consistent design systems with automated component libraries and style guides.
                    </p>
                    <ul class="text-gray-600 space-y-2">
                        <li><i class="fas fa-check text-green-500 mr-2"></i>Component libraries</li>
                        <li><i class="fas fa-check text-green-500 mr-2"></i>Style guides</li>
                        <li><i class="fas fa-check text-green-500 mr-2"></i>Brand consistency</li>
                    </ul>
                </div>

                <!-- Code Export -->
                <div class="bg-white p-8 rounded-xl shadow-lg card-hover">
                    <div class="feature-icon mb-6">
                        <i class="fas fa-code"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">Multi-Framework Export</h3>
                    <p class="text-gray-600 mb-6">
                        Export your components to multiple frameworks and formats with clean, production-ready code.
                    </p>
                    <ul class="text-gray-600 space-y-2">
                        <li><i class="fas fa-check text-green-500 mr-2"></i>React components</li>
                        <li><i class="fas fa-check text-green-500 mr-2"></i>Vue components</li>
                        <li><i class="fas fa-check text-green-500 mr-2"></i>Angular components</li>
                    </ul>
                </div>

                <!-- Analytics & Insights -->
                <div class="bg-white p-8 rounded-xl shadow-lg card-hover">
                    <div class="feature-icon mb-6">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">Analytics & Insights</h3>
                    <p class="text-gray-600 mb-6">
                        Track design performance and get insights into user experience improvements with detailed analytics.
                    </p>
                    <ul class="text-gray-600 space-y-2">
                        <li><i class="fas fa-check text-green-500 mr-2"></i>Performance metrics</li>
                        <li><i class="fas fa-check text-green-500 mr-2"></i>Usability scores</li>
                        <li><i class="fas fa-check text-green-500 mr-2"></i>Accessibility reports</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="py-20 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold text-gray-900 mb-4">Quick Actions</h2>
                <p class="text-xl text-gray-600">Start creating amazing designs right away</p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <button class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow text-left">
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
                        <i class="fas fa-plus text-blue-600 text-xl"></i>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Create Project</h3>
                    <p class="text-gray-600 text-sm">Start a new design project</p>
                </button>

                <button class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow text-left">
                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
                        <i class="fas fa-cube text-green-600 text-xl"></i>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Generate Component</h3>
                    <p class="text-gray-600 text-sm">Create a new UI component</p>
                </button>

                <button class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow text-left">
                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
                        <i class="fas fa-magic text-purple-600 text-xl"></i>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">AI Suggestions</h3>
                    <p class="text-gray-600 text-sm">Get design improvements</p>
                </button>

                <button class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow text-left">
                    <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
                        <i class="fas fa-download text-orange-600 text-xl"></i>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Export Code</h3>
                    <p class="text-gray-600 text-sm">Download component code</p>
                </button>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div>
                    <h3 class="text-xl font-bold mb-4">Solankii</h3>
                    <p class="text-gray-400">
                        AI-powered design assistant for modern UI/UX teams.
                    </p>
                </div>
                <div>
                    <h4 class="font-semibold mb-4">Features</h4>
                    <ul class="space-y-2 text-gray-400">
                        <li>Component Generation</li>
                        <li>Design Suggestions</li>
                        <li>Collaborative Reviews</li>
                        <li>Code Export</li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-semibold mb-4">Resources</h4>
                    <ul class="space-y-2 text-gray-400">
                        <li>Documentation</li>
                        <li>API Reference</li>
                        <li>Tutorials</li>
                        <li>Support</li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-semibold mb-4">Connect</h4>
                    <ul class="space-y-2 text-gray-400">
                        <li>GitHub</li>
                        <li>Twitter</li>
                        <li>LinkedIn</li>
                        <li>Contact</li>
                    </ul>
                </div>
            </div>
            <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
                <p>&copy; 2024 Solankii. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        // Add interactivity
        document.addEventListener('DOMContentLoaded', function() {
            // Add click handlers for buttons
            const buttons = document.querySelectorAll('button');
            buttons.forEach(button => {
                button.addEventListener('click', function() {
                    // Add ripple effect or other interactions
                    console.log('Button clicked:', this.textContent);
                });
            });

            // Add smooth scrolling for navigation
            const links = document.querySelectorAll('a[href^="#"]');
            links.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                });
            });
        });
    </script>
</body>
</html> 